<!DOCTYPE html>
<html>
  <head>
    <title>User Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <% if user_signed_in? %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <span class="navbar-brand">
            Welcome <strong><%= current_user.email %></strong>
          </span>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to 'Blogs', blogs_path, class:'nav-item nav-link' %> |
              </li>
              <li class="nav-item">
                <%= link_to 'Create Blog', new_blog_path, class: 'nav-item nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Edit profile', edit_user_registration_path, class:'nav-item nav-link' %> |
              </li>
              <li class="nav-item">
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'nav-item nav-link'  %>
              </li>
            </ul>
          </div>
          <% else %>
            <div class="navbar-brand mt-0 pt-0">
              Blog App
            </div>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
