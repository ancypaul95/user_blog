<small><%= render "devise/shared/error_messages", resource: resource %></small>
<h2 class="mt-3">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field form-group">
    <%= f.label :email, class: "col-sm-12 col-md-4 col-lg-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-12 col-md-8 col-lg-5" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: "col-sm-12 col-md-4 col-lg-3" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-12 col-md-8 col-lg-5" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "col-sm-12 col-md-4 col-lg-3" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-12 col-md-8 col-lg-5" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
    <span class="btn btn-primary login__link--decoration"><%= render "devise/shared/links" %></span>
  </div>
<% end %>

